# Database (コンテナ内部ではサービス名 "db" でアクセス)
DATABASE_URL="mysql://appuser:apppassword@db:3306/house_expense"

# MySQL root password (docker-compose の healthcheck で使用)
MYSQL_ROOT_PASSWORD="password"
MYSQL_PASSWORD="apppassword"

# NextAuth
# 生成方法: openssl rand -base64 32
AUTH_SECRET="<generate: openssl rand -base64 32>"
AUTH_URL="http://localhost:3000"

# Google OAuth (https://console.cloud.google.com/ で取得)
GOOGLE_CLIENT_ID="your-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-client-secret"

# 初期ユーザーのメールアドレス (カンマ区切り)
INIT_USER_EMAILS="user@example.com"

# Gemini API (任意 - 未設定時はモックフォールバック)
# GEMINI_API_KEY="your-api-key"
